---
import { getEntry, getCollection, render } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import Container from '@/components/Container.astro';
import Author from '@/components/ui/Author.astro';
import { DEFAULT_CONFIGURATION } from '@/lib/constants';
import WorkExperience from '@/components/ui/WorkExperience.astro';
import CreatingItem from '@/components/ui/CreatingItem.astro';
import OtherStuffItem from '@/components/ui/OtherStuffItem.astro';
import PostPreview from '@/components/ui/PostPreview.astro';
import PostPreviewWithImage from '@/components/ui/PostPreviewWithImage.astro';
import { sortByDateRange } from '@/lib/utils';
import { getSiteConfig } from '@/lib/config';

const entry = await getEntry('pages', 'homepage');

if (!entry) {
  throw new Error('Homepage entry not found');
}

const { Content } = await render(entry);

const links = await getCollection('links');

const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

const otherStuff = await getCollection('otherStuff');
const sortedOtherStuff = otherStuff.sort((a, b) => (a.data.order || 0) - (b.data.order || 0));

const posts = await getCollection('posts');
const latestPosts = posts
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

const config = getSiteConfig();
---

<BaseLayout seo={entry.data.seo}>
  {config.elements.avatar && (
    <Container as="section" class="py-6">
      <Author {...DEFAULT_CONFIGURATION.author} />
    </Container>
  )}

  {config.sections.about && (
    <Container as="section" class="py-6">
      <div class="flex flex-col gap-5">
        <span class="text-headings">About</span>
        <div class="prose dark:prose-invert">
          <Content />
        </div>
      </div>
    </Container>
  )}
  {
    config.sections.socialLinks && links.length > 0 && (
      <Container as="section" class="py-6">
        <div class="flex flex-col gap-5">
          <span class="text-headings">Contact</span>
          <ul class="flex flex-col gap-3">
            {links.map((link) => (
              <li class="py-0.5">
                <div class="flex items-center gap-5">
                  <span class="min-w-28 text-muted-foreground">
                    {link.data.label}
                  </span>
                  <a
                    class="text-headings font-medium"
                    rel="noopener noreferrer"
                    target="_blank"
                    href={link.data.url}
                  >
                    {link.data.name}
                  </a>
                </div>
              </li>
            ))}
          </ul>
        </div>
      </Container>
    )
  }
  {
    config.sections.creating && sortedProjects.length > 0 && (
      <Container as="section" class="py-6">
        <div class="flex flex-col gap-5">
          <span class="text-headings">Creating</span>
          <ul class="flex flex-col gap-4">
            {sortedProjects.map((project) => (
              <CreatingItem entry={project} />
            ))}
          </ul>
        </div>
      </Container>
    )
  }
  {
    config.sections.otherStuff && sortedOtherStuff.length > 0 && (
      <Container as="section" class="py-6">
        <div class="flex flex-col gap-5">
          <span class="text-headings">Other Stuff</span>
          <ul class="flex flex-col gap-4">
            {sortedOtherStuff.map((item) => (
              <OtherStuffItem entry={item} />
            ))}
          </ul>
        </div>
      </Container>
    )
  }
  {
    config.sections.posts && latestPosts.length > 0 && (
      <Container as="section" class="py-6">
        <div class="flex flex-col gap-5">
          <span class="text-headings">Posts</span>
          <ul class="flex flex-col gap-4">
            {latestPosts.map((post) => (
              <PostPreviewWithImage entry={post} />
            ))}
          </ul>
          <a
            href="/writing"
            class="text-headings font-medium hover:underline self-start"
          >
            see all posts ->
          </a>
        </div>
      </Container>
    )
  }
</BaseLayout>
